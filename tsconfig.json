{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "es6",
    "types": ["node", "./src/types/index.d.ts"]
  },
  "baseUrl": ".",
  "paths": {
    "@/*": ["src/*"],
    "@shared-components/*": ["src/shared/components/*"],
    "@shared-constants/*": ["src/shared/constant/*"],
    "@pages/*": ["src/pages/*"],
    "@lib/*": ["src/lib/*"],
    "@themes": ["src/shared/constant/theme/index"],
    "@assets": ["src/assets/*"],
    "@features": ["src/features/*"],
    "@services": ["src/services/*"],
    "@screens/*": ["src/screens/*"],
    "@types/*": ["src/types/*"]
  }
}
