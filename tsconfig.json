{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "es6",
    "types": ["node", "./src/types/index.d.ts"]
  },
  "baseUrl": ".",
  "paths": {
    "@/*": ["src/*"],
    "@shared-components/*": ["shared/components/*"],
    "@shared-constants/*": ["shared/constant/*"],
    "@pages/*": ["pages/*"],
    "@lib/*": ["lib/*"],
    "@themes": ["shared/constant/theme/index"],
    "@assets": ["assets/*"],
    "@features": ["features/*"],
    "@services": ["services/*"],
    "@screens/*": ["screens/*"],
    "@types/*": ["types/*"]
  }
}
